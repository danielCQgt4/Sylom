@*Seguridad*@
@Styles.Render("~/bundles/style/sec")

<script>
    const create = "@ViewBag.create"== "True";
    const del = "@ViewBag.delete" == "True";
    const update = "@ViewBag.update" == "True";
    const nombreTh = "@ViewBag.nombreTh";
</script>
<div class="cyc-pt-1 cyc-pl-1 cyc-pr-1 cyc-pb-1" id="seguridad-msg">
    <!-- NAVEGATION -->
    <div class="admin-title">
        <div class="admin-title-route">
            <h2><strong>Seguridad / </strong></h2>
            <h3><strong>&nbsp;Roles / </strong></h3>
            <h4 onclick="location.reload()" class="admin-title-route-items"><strong>&nbsp;@ViewBag.mode </strong></h4>
        </div>
    </div>
    <hr />
    <div class="paciente-box cyc-p-1">
        <div class="paciente-box-top">
            <i name="seguridad-dp-select" title="Retroceder" class="fas fa-arrow-alt-circle-left"></i>
            @if (ViewBag.mode.Equals("crear")) {
                <h3>Agregar un rol</h3>
            } else {
                <h3>Modificar un rol</h3>
            }
        </div>
        <hr />
        <div class="container" id="seguridad-form">
            <div id="to-msg"></div>
            <h4>Informacion del rol</h4>
            <!-- ID rol-->
            <div class="form-group">
                <label id="seguridad-form-idlbl" class="form-check-label">ID del rol</label>
                <p style="color:#8e949a; font-size:11px; display:inline;">(Requerido)</p>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" readonly id="seguridad-form-id" />
            </div>
            <!--Descripcion-->
            <div class="form-group">
                <label class="form-check-label">Nombre del rol</label>
                <p style="color:#8e949a; font-size:11px; display:inline;">(Requerido)</p>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Ingresa un nombre para el rol" id="seguridad-form-desc" />
            </div>
            <hr />
            <br />
            <h4>Alcances del rol</h4>
            <div>
                <div class="d-flex justify-content-end">
                    <button id="seguridad-form-btn-addApart" class="btn cyc-btn-warning mb-1 pl-4 pr-4">Agregar apartado</button>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Apartado</th>
                            <th class="cyc-text-center">Crear</th>
                            <th class="cyc-text-center">Leer</th>
                            <th class="cyc-text-center">Editar</th>
                            <th class="cyc-text-center">Eliminar</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="seguridad-table-apart">
                    </tbody>
                </table>
            </div>

            <hr />
            <br />
            <h4>Opciones del rol</h4>
            <div>
                <div class="d-flex justify-content-end">
                    <button id="seguridad-form-btn-addUser" class="btn cyc-btn-primary mb-1 pl-4 pr-4">Agregar usuario</button>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="seguridad-table-user">
                    </tbody>
                </table>
            </div>
            <br />
            <br />
            <div class="form-group" id="seguridad-form-action">
                <div class="d-block">
                    <div class="paciente-form-actions">
                        <button name="seguridad-dp-select" class="btn btn-outline-danger cyc-w-49 paciente-form-exit">
                            Salir
                        </button>
                        @if (ViewBag.mode.Equals("crear")) {
                            <button id="btn-action" class="btn cyc-btn-success-2 cyc-w-49 paciente-form-action">
                                Agregar
                            </button>
                        } else {
                            <button id="btn-action" class="btn cyc-btn-primary-2 cyc-w-49 paciente-form-action">
                                Modificar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Public/JS/Sec/form.js" type="text/javascript"></script>
</div>
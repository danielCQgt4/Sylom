@*Mantenimiento*@
@Styles.Render("~/bundles/style/mante")
@switch (ViewBag.mode) {
    case "tipopaciente":
        ViewBag.nombreCh = "Paciente";
        ViewBag.nombreTh = "Nombre del tipo de paciente";
        break;
    case "medicina":
        ViewBag.nombreCh = "Medicina";
        ViewBag.nombreTh = "Nombre de la medicina";
        break;
    case "institucion":
        ViewBag.nombreCh = "Institucion";
        ViewBag.nombreTh = "Nombre de la institucion";
        break;
    case "tipoempleado":
        ViewBag.nombreCh = "Tipos de empleado";
        ViewBag.nombreTh = "Nombre del tipo de empleado";
        break;
    default:
        ViewBag.nombreCh = "Tipos de paciente";
        ViewBag.nombreTh = "Nombre del tipo de paciente";
        break;
}
<script>
    const create = "@ViewBag.create"== "True";
    const del = "@ViewBag.delete" == "True";
    const update = "@ViewBag.update" == "True";
    const nombreTh = "@ViewBag.nombreTh";
    const atcInd = true;
</script>
<div id="mante-msg" class="cyc-pt-1"></div>
<div class="pt-3 cyc-pl-1 cyc-pr-1 cyc-pb-1 admin-main-div">

    <div class="admin-menu-box">
        <h4 class="cyc-text-white cyc-text-center d-block admin-menu-title">Menu</h4>
        <hr />
        <ul class="admin-menu-items">
            <li name="mante-dp-option" data-path="tipopaciente">Tipos de pacientes</li>
            <li name="mante-dp-option" data-path="medicina">Medicinas</li>
            <li name="mante-dp-option" data-path="institucion">Intituciones</li>
            <li name="mante-dp-option" data-path="tipoempleado">Tipos de empleado</li>
        </ul>
    </div>

    <div class="admin-content">

        <div style="position:relative;" class="admin-title">
            <h4 class="cyc-text-white d-block admin-title-up">Navegacion</h4>
            <hr />
            <h4 style="display:inline-block">Mantenimiento /</h4>
            <div style="display:inline-block" class="admin-dropdown" id="mante-dp-container">
                <div class="admin-dropdown-ch">
                    <h6 id="mante-dp-select" class="admin-dropdown-title2" style="display:inline-block">&nbsp; @ViewBag.nombreCh &nbsp; &nbsp;</h6>
                    <i style="display:inline-block" class="fa fa-angle-down cyc-text-accent admin-dropdown-icon"></i>
                </div>
                <ul class="admin-dropdown-items" id="mante-dp-items" style="display: none;">
                    <li name="mante-dp-option" data-path="tipopaciente">Tipos de pacientes</li>
                    <li name="mante-dp-option" data-path="medicina">Medicinas</li>
                    <li name="mante-dp-option" data-path="institucion">Intituciones</li>
                    <li name="mante-dp-option" data-path="tipoempleado">Tipos de empleado</li>
                </ul>
            </div>
            @if (ViewBag.create) {
                <button class="btn cyc-btn-success-2" id="mante-btn-add" style="float:right;">
                    <i class="fas fa-plus"></i> &nbsp; Agregar nuevo
                </button>
            }
        </div>

        <hr />

        <div class="admin-box2">
            <div class="admin-box-top2">
                <h4 class="cyc-text-white d-block  pl-2">Informacion</h4>
            </div>
            <div style="margin:11px">
                @if (ViewBag.read) {
                    <table class="table">
                        <tbody id="mante-table">
                        </tbody>
                    </table>
                } else {
                    <h3>No tienes permisos para acceder a esta informacion</h3>
                }
            </div>
        </div>

    </div>

</div>
<script src="/Public/JS/Mante/mantenimiento.js" type="text/javascript"></script>


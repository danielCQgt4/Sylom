@*Mantenimiento*@
@Styles.Render("~/bundles/style/mante")
@switch (ViewBag.mode) {
    case "tipoempleado":
        ViewBag.nombreCh = "Tipos de empleado";
        ViewBag.nombreTh = "Nombre del tipo de empleado";
        break;
    case "medicinas":
        ViewBag.nombreCh = "Medicina";
        ViewBag.nombreTh = "Nombre de la medicina";
        break;
    default:
        ViewBag.nombreCh = "Tipos de paciente";
        ViewBag.nombreTh = "Nombre del tipo de paciente";
        break;
}
<script>
    var create = "@ViewBag.create"== "True";
    var del = "@ViewBag.delete" == "True";
    var update = "@ViewBag.update" == "True";
    var nombreTh = "@ViewBag.nombreTh";
</script>
<div class="cyc-pt-2 cyc-pl-1 cyc-pr-1 cyc-pb-1" id="mante-msg">
    <div style="position:relative;">
        <h2 style="display:inline-block">Mantenimiento/</h2>
        <div style="display:inline-block" class="admin-dropdown" id="mante-dp-container">
            <div class="admin-dropdown-ch">
                <h5 id="mante-dp-select" class="admin-dropdown-title" style="display:inline-block">&nbsp; @ViewBag.nombreCh &nbsp; &nbsp;</h5>
                <i style="display:inline-block" class="far fa-caret-square-down admin-dropdown-icon"></i>
            </div>
            <ul class="admin-dropdown-items" id="mante-dp-items" style="display: none;">
                <li name="mante-dp-option" data-path="tipopaciente">Tipos de pacientes</li>
                <li name="mante-dp-option" data-path="tipoempleado">Tipos de empleado</li>
                <li name="mante-dp-option" data-path="medicinas">Medicinas</li>
            </ul>
        </div>
    </div>
    <hr />
    <div class="admin-box">
        <div class="admin-box-top">
            @if (ViewBag.create) {
                <button class="btn cyc-btn-success-2 admin-box-btn" id="mante-btn-add">
                    <i class="fas fa-plus"></i> &nbsp; Agregar nuevo
                </button>
            }
        </div>
        <div class="cyc-m-1">
            @if (ViewBag.read) {
                <table class="table">
                    <tbody id="mante-table">
                    </tbody>
                </table>
            } else {
                <h3>No tienes permisos para acceder a esta informacion</h3>
            }
        </div>
    </div>
</div>
@if (ViewBag.create || ViewBag.update) {
    <div class="dialog-back cyc-box-center-fixed cyc-position-relative d-none" id="mante-dg">
        <div class="mante-dg cyc-p-1  cyc-box-center-fixed cyc-position-relative" id="mante-dg-bg">
            <h3 id="mante-dg-title">Agrega un dato</h3>
            <hr />
            <br />

            <div class="form-group">
                <label id="mante-dg-idlbl" class="form-check-label">ID del ***</label>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" readonly id="mante-dg-id" />
            </div>
            <div class="form-group">
                <label class="form-check-label">Ingresa un nombre</label>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Ingresa el nombre" id="mante-dg-desc" />
            </div>

            <br />
            <div class="form-group" id="mante-dg-action">
            </div>
            <div class="form-group" id="mante-dg-action2">
            </div>
        </div>
    </div>
}
<script src="/Public/JS/Mante/mantenimiento.js" type="text/javascript"></script>


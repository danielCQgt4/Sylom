@Styles.Render("~/bundles/style/login")
<div class="w-100 h-100 bg-login cyc-mt-4">
    <div class="container p-lg-5 faLog1">
        <div class="card cyc-box-center-h box-login cyc-border-r-5">
            <div class="card-img-top">
                <img src="/Public/IMG/Login/userlog.png" width="136px" height="136px" alt="User" class="m-auto d-block">
            </div>
            <div class="card-title">
                <h3 class="text-accent text-center">Ingresa sesion</h3>
            </div>
            <div class="card-body">
                <form action="/login" method="post" id="login-form">
                    <div class="form-group">
                        <label for="user" class="text-accent">Usuario</label>
                        <input type="text" name="user" id="user" class="form-control bg-usu-fo" placeholder="Usuario">
                    </div>
                    <div class="form-group">
                        <label for="pass" class="text-accent">Contraseña</label>
                        <input type="password" name="pass" id="pass" class="form-control bg-pass-fo"
                               placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <input type="button" value="Iniciar sesion" class="cyc-btn cyc-btn-success-2 d-block w-100 mt-lg-5" id="login-btn-iniciar-sesion">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var btn = gI('login-btn-iniciar-sesion');
    var form = gI('login-form');

    btn.addEventListener('click', () => {
        form.submit();
    });
</script>

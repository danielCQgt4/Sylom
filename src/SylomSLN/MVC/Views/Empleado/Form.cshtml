@*Empleado*@
@Styles.Render("~/bundles/style/empleado")

<script>
    var create = "@ViewBag.create"== "True";
    var del = "@ViewBag.delete" == "True";
    var update = "@ViewBag.update" == "True";
    var nombreTh = "@ViewBag.nombreTh";
</script>
<div class="cyc-pt-1 cyc-pl-1 cyc-pr-1 cyc-pb-1" id="empleado-msg">

    <div class="admin-title">
        <div class="admin-title-route">
            <h2><strong>Empleado / </strong></h2>
            <h3><strong>&nbsp;Empleados / </strong></h3>
            <h4 onclick="location.reload()" class="admin-title-route-items"><strong>&nbsp;@ViewBag.mode </strong></h4>
        </div>
    </div>
    <hr />
    <div class="paciente-box cyc-p-1">
        <div class="paciente-box-top">
            <i name="empleado-dp-select" title="Retroceder" class="fas fa-arrow-alt-circle-left"></i>
            @if (ViewBag.mode.Equals("crear")) {
                <h3>Agregar un empleado</h3>
            } else {
                <h3>Modificar un empleado</h3>
            }
        </div>
        <hr />
        <div class="container" id="empleado-form">
            <div id="to-msg"></div>
            <h4>Informacion del empleado</h4>

            <div class="row">
                <div class="col-md-4">
                    <!-- ID empleado-->
                    <div class="form-group">
                        <label id="empleado-form-idlbl" class="form-check-label">ID del empleado</label>
                        <p style="color:#8e949a; font-size:11px; display:inline;">(Requerido)</p>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" readonly id="empleado-form-id" />
                    </div>
                </div>
                <div class="col-md-8">
                    <!--Tipo empleado-->
                    <div class="form-group">
                        <label class="form-check-label">Nombre</label>
                        <p style="color:#8e949a; font-size:11px; display:inline;">(Requerido)</p>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ingresa un nombre" id="empleado-form-nombre" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!--Nombre-->
                    <div class="form-group">
                        <label class="form-check-label">Tipo de empleado</label>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="empleado-form-tipoempleado">
                        </select>
                    </div>
                </div>
            </div>

            <hr />
            <br />
            <h4>Informacion del usuario</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-check-label">Usuario</label>
                    </div>
                    <div class="form-group">
                        <input type="text" autocomplete="off" placeholder="Ingrese un usuario" class="form-control" id="empleado-form-usuario" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-check-label">Contraseña</label>
                        @if (ViewBag.mode.Equals("crear")) {
                            <p style="color:#8e949a; font-size:11px; display:inline;">(Requerido)</p>
                        }
                    </div>
                    <div class="form-group">
                        <input type="password" autocomplete="off" placeholder="Ingrese una contraseña" class="form-control" id="empleado-form-pass" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-check-label">Confirmacion</label>
                        @if (ViewBag.mode.Equals("crear")) {
                            <p style="color:#8e949a; font-size:11px; display:inline;">(Requerido)</p>
                        }
                    </div>
                    <div class="form-group">
                        <input type="password" autocomplete="off" placeholder="Confirme la contraseña" class="form-control" id="empleado-form-confirm" />
                    </div>
                </div>
            </div>
            <br />

            <br />
            <div class="form-group" id="empleado-form-action">
                <div class="d-block">
                    <div class="paciente-form-actions">
                        <button name="empleado-dp-select" id="empleado-btn-exit" class="btn btn-outline-danger cyc-w-49 paciente-form-exit">
                            Salir
                        </button>
                        @if (ViewBag.mode.Equals("crear")) {
                            <button id="btn-action" class="btn cyc-btn-success-2 cyc-w-49 paciente-form-action">
                                Agregar
                            </button>
                        } else {
                            <button id="btn-action" class="btn cyc-btn-primary-2 cyc-w-49 paciente-form-action">
                                Modificar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Public/JS/Empleado/form.js" type="text/javascript"></script>
</div>
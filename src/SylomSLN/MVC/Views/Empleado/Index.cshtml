@*Empleados*@
@Styles.Render("~/bundles/style/empleado")

<script>
    const create = "@ViewBag.create"== "True";
    const del = "@ViewBag.delete" == "True";
    const update = "@ViewBag.update" == "True";
    const nombreTh = "@ViewBag.nombreTh";
    const idEmpleado = @ViewBag.empleado;
</script>
<div id="empleado-msg" class="cyc-pt-1"></div>
<div class="cyc-pt-1 cyc-pl-1 cyc-pr-1 cyc-pb-1 admin-main-div">


    <div class="admin-menu-box">
        <h4 class="cyc-text-white cyc-text-center d-block admin-menu-title">Menu</h4>
        <hr />
        <ul class="admin-menu-items">
            <li onclick="location.reload()" name="mante-dp-option" data-path="tipopaciente">Empleados</li>
        </ul>
    </div>

    <div class="admin-content">

        <div style="position:relative;" class="admin-title">
            <h4 class="cyc-text-white d-block admin-title-up">Navegacion</h4>
            <hr />
            <h4 style="display:inline-block">Empleado /</h4>
            <div style="display:inline-block" class="admin-dropdown" id="empleado-dp-container">
                <div class="admin-dropdown-ch">
                    <h6 id="empleado-dp-select" class="admin-dropdown-title2" style="display:inline-block">&nbsp; Empleado</h6>
                </div>
                <ul class="admin-dropdown-items" id="empleado-dp-items" style="display: none;">
                    <li name="mante-dp-option" data-path="tipopaciente">Empleados</li>
                </ul>
            </div>
            @if (ViewBag.create) {
                <button class="btn cyc-btn-success-2" id="empleado-btn-add" style="float:right;">
                    <i class="fas fa-plus"></i> &nbsp; Agregar nuevo
                </button>
            }
        </div>
        <hr />

        <div class="admin-box2">
            <div class="admin-box-top2">
                <h4 class="cyc-text-white d-block pl-2">Informacion</h4>
            </div>
            <div style="margin:11px">
                @if (ViewBag.read) {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Tipo de empleado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="empleado-table">
                        </tbody>
                    </table>
                } else {
                    <h3>No tienes permisos para acceder a esta informacion</h3>
                }
            </div>
        </div>
    </div>

</div>

<script src="~/Public/JS/Empleado/empleado.js" type="text/javascript"></script>
